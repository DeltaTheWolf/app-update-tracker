<?xml version="1.0" encoding="utf-8"?>
<framework>
    <ime string_id="ime_persian" class="com.google.android.apps.inputmethod.libs.latin5.LatinIme" language="fa" auto_capital="false" display_app_completions="true" announce_auto_selected_candidate="true">
        <if number_row="false">
            <keyboard_group variant="persian" variant_label="@string/variant_persian">
                <keyboard type="prime" def="@xml/keyboard_fa" />
                <include href="@xml/keyboards_non_prime_latin" />
            </keyboard_group>
        </if>
        <else>
            <keyboard_group variant="persian" variant_label="@string/variant_persian" layout_theme="@style/KeyboardLayoutTheme.WithNumberRow">
                <keyboard type="prime" def="@xml/keyboard_fa">
                    <merge def="@xml/keyboard_latin_fragment_numbers_10_11_11_11_no_shift" />
                </keyboard>
                <include href="@xml/keyboards_non_prime_latin" />
            </keyboard_group>
        </else>
    </ime>
</framework>