<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="false" android:state_pressed="true">
        <set>
            <objectAnimator android:interpolator="@android:anim/decelerate_interpolator" android:duration="@integer/selection_press_animation_time" android:valueTo="0.9" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:interpolator="@android:anim/decelerate_interpolator" android:duration="@integer/selection_press_animation_time" android:valueTo="0.95" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:interpolator="@android:anim/decelerate_interpolator" android:duration="@integer/selection_press_animation_time" android:valueFrom="0.9" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:interpolator="@android:anim/decelerate_interpolator" android:duration="@integer/selection_press_animation_time" android:valueFrom="0.95" android:valueTo="1" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
</selector>