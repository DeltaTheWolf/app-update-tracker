<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <rotate android:fromDegrees="45.0">
            <shape android:shape="rectangle">
                <size android:height="8.0dip" />
                <solid android:color="@color/regular_red" />
                <corners android:radius="4.0dip" />
            </shape>
        </rotate>
    </item>
    <item android:gravity="center">
        <rotate android:fromDegrees="135.0">
            <shape android:shape="rectangle">
                <size android:height="8.0dip" />
                <solid android:color="@color/regular_red" />
                <corners android:radius="4.0dip" />
            </shape>
        </rotate>
    </item>
</layer-list>