<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dark_blue" />
            <padding android:left="@dimen/landing_page_round_button_horizontal_padding" android:top="@dimen/landing_page_round_button_vertical_padding" android:right="@dimen/landing_page_round_button_horizontal_padding" android:bottom="@dimen/landing_page_round_button_vertical_padding" />
            <corners android:radius="@dimen/landing_page_round_button_radius" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/grey" />
            <padding android:left="@dimen/landing_page_round_button_horizontal_padding" android:top="@dimen/landing_page_round_button_vertical_padding" android:right="@dimen/landing_page_round_button_horizontal_padding" android:bottom="@dimen/landing_page_round_button_vertical_padding" />
            <corners android:radius="@dimen/landing_page_round_button_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/regular_blue" />
            <padding android:left="@dimen/landing_page_round_button_horizontal_padding" android:top="@dimen/landing_page_round_button_vertical_padding" android:right="@dimen/landing_page_round_button_horizontal_padding" android:bottom="@dimen/landing_page_round_button_vertical_padding" />
            <corners android:radius="@dimen/landing_page_round_button_radius" />
        </shape>
    </item>
</selector>